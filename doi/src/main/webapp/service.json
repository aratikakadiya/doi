{
  "swagger": "2.0",
  "info": {
    "description": "The Digital Object Identifier (DOI) Service supports initializing and minting DOIs using DataCite.org.",
    "version": "1.0.0",
    "title": "CADC DOI Service"
  },
  "host": "apps.canfar.net",
  "basePath": "/doi/instances",
  "tags": [
    {
      "name": "instances",
      "description": "Main endpoint for the DOI service."
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/instances": {
      "post": {
        "tags": [
          "instances"
        ],
        "summary": "Initialize a new DOI",
        "description": "Generates a VOSpace directory the calling user will have permission to upload DOI data to, and an XML file using DataCite metadata XSD format.",
        "operationId": "createDOI",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Basic information for starting DOI process",
            "required": true,
            "schema": {
              "$ref": "#/definitions/DOIMeta"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "DOI creation successful."
          },
          "400": {
            "description": "Bad DOI metadata"
          },
          "403": {
            "description": "Not authorised"
          },
          "409": {
            "description": "DOI already exists"
          },
          "500": {
            "description": "Unexpected server error"
          },
          "503": {
            "description": "Temporarily unavailable"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      },
      "put": {
        "tags": [
          "instances"
        ],
        "summary": "Not Yet Implemented",
        "description": "Update an existing unminted DOI",
        "operationId": "updateDOI",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "DOI object details... ",
            "required": true,
            "schema": {
              "$ref": "#/definitions/DOIMeta"
            }
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorised"
          },
          "403": {
            "description": "User not authenticated for this DOI"
          },
          "404": {
            "description": "DOI not found"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      },
      "get": {
        "tags": [
          "instances"
        ],
        "summary": "Get a list of DOI statuses",
        "description": "List the statuses of all DOIs created by the user.",
        "operationId": "getAllDOI",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/xml",
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DOIStatusList"
              }
            }
          },
          "403": {
            "description": "Not authorised"
          },
          "500": {
            "description": "Unexpected server error"
          },
          "503": {
            "description": "Temporarily unavailable"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      }
    },
    "/instances/{DOINum}": {
      "get": {
        "tags": [
          "instances"
        ],
        "summary": "Get a DOI instance",
        "description": "Get specified DOI for authenticated user. Calling user must have access.",
        "operationId": "getDOI",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "DOINum",
            "in": "path",
            "description": "Digital Object Identifier number to retrieve",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DOIMeta"
              }
            }
          },
          "403": {
            "description": "Not authorised"
          },
          "404": {
            "description": "DOI not found"
          },
          "500": {
            "description": "Unexpected server error"
          },
          "503": {
            "description": "Temporarily unavailable"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      },
      "delete": {
        "tags": [
          "instances"
        ],
        "summary": "Delete a DOI instance",
        "description": "Delete specified DOI for authenticated user, including associated VOSpace data directory. Calling user must have access.",
        "operationId": "deleteDOI",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "DOINum",
            "in": "path",
            "description": "Digital Object Identifier number to retrieve",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "403": {
            "description": "Not authorised"
          },
          "500": {
            "description": "Unexpected server error"
          },
          "503": {
            "description": "Temporarily unavailable"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      }
    },
    "/instances/{DOINum}/status": {
      "get": {
        "tags": [
          "instances"
        ],
        "summary": "Get the status of a DOI instance",
        "description": "Get the status of the specified DOI for authenticated user. Calling user must have access.",
        "operationId": "getDOIStatus",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "DOINum",
            "in": "path",
            "description": "Digital Object Identifier number to retrieve status",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DOIStatus"
              }
            }
          },
          "403": {
            "description": "Not authorised"
          },
          "404": {
            "description": "DOI not found"
          },
          "500": {
            "description": "Unexpected server error"
          },
          "503": {
            "description": "Temporarily unavailable"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:pets": "modify pets in your account",
        "read:pets": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "DOIStatus": {
      "type": "object",
      "required": [
        "identifier",
        "title",
        "publicationYear",
        "status"
      ],
      "properties": {
        "identifier": {
          "type": "object",
          "example": "10.5072/example-full",
          "properties": {
            "identifierType": {
              "type": "string",
              "example": "DOI",
              "xml": {
                "attribute": true
              }
            }
          }
        },
        "title": {
          "type": "object",
          "example": "Full DataCite XML Example",
          "properties": {
            "xml:lang": {
              "type": "string",
              "example": "en-US",
              "xml": {
                "attribute": true
              }
            }
          }
        },
        "dataDirectory": {
          "type": "string",
          "example": "/AstroDataCitationDOI/CISTI.CANFAR/18.0100/data"
        },
        "status": {
          "type": "string",
          "example": "draft"
        }
      },
      "xml": {
        "name": "doistatus"
      }
    },
    "DOIStatusList": {
      "type": "object",
      "required": [
        "doistatus"
      ],
      "properties": {
        "doistatus": {
          "type": "object",
          "properties": {
            "identifier": {
              "type": "object",
              "example": "10.5072/example-full",
              "properties": {
                "identifierType": {
                  "type": "string",
                  "example": "DOI",
                  "xml": {
                    "attribute": true
                  }
                }
              }
            },
            "title": {
              "type": "object",
              "example": "Full DataCite XML Example",
              "properties": {
                "xml:lang": {
                  "type": "string",
                  "example": "en-US",
                  "xml": {
                    "attribute": true
                  }
                }
              }
            },
            "dataDirectory": {
              "type": "string",
              "example": "/AstroDataCitationDOI/CISTI.CANFAR/18.0100/data"
            },
            "status": {
              "type": "string",
              "example": "in progress"
            }
          }
        }
      },
      "xml": {
        "name": "doiStatuses"
      }
    },
    "DOIMeta": {
      "type": "object",
      "required": [
        "identifier",
        "creators",
        "titles",
        "publisher",
        "publicationYear"
      ],
      "properties": {
        "identifier": {
          "type": "object",
          "example": "10.5072/example-full",
          "properties": {
            "identifierType": {
              "type": "string",
              "example": "DOI",
              "xml": {
                "attribute": true
              }
            }
          }
        },
        "creators": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "creator": {
                "type": "object",
                "properties": {
                  "creatorName": {
                    "type": "object",
                    "example": "Miller, Elizabeth",
                    "properties": {
                      "nameType": {
                        "type": "string",
                        "example": "Personal",
                        "xml": {
                          "attribute": true
                        }
                      }
                    }
                  },
                  "givenName": {
                    "type": "string",
                    "example": "Elizabeth"
                  },
                  "familyName": {
                    "type": "string",
                    "example": "Miller"
                  },
                  "nameIdentifier": {
                    "type": "object",
                    "example": "0000-0001-5000-0007",
                    "properties": {
                      "nameIdentifierScheme": {
                        "type": "string",
                        "example": "ORCID",
                        "xml": {
                          "attribute": true
                        }
                      },
                      "schemeURI": {
                        "type": "string",
                        "example": "http://orcid.org/",
                        "xml": {
                          "attribute": true
                        }
                      }
                    }
                  },
                  "affiliation": {
                    "type": "string",
                    "example": "DataCite"
                  }
                }
              }
            }
          }
        },
        "titles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "object",
                "example": "Full DataCite XML Example",
                "properties": {
                  "xml:lang": {
                    "type": "string",
                    "example": "en-US",
                    "xml": {
                      "attribute": true
                    }
                  }
                }
              }
            }
          }
        },
        "publisher": {
          "type": "string",
          "example": "DataCite"
        },
        "publicationYear": {
          "type": "string",
          "example": "2014"
        }
      },
      "xml": {
        "name": "resource",
        "namespace": "http://datacite.org/schema/kernel-4"
      }
    }
  }
}
