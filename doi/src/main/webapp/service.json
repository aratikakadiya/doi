{
  "swagger": "2.0",
  "info": {
    "description": "The Digital Object Identifier (DOI) Service supports initializing and minting DOIs using DataCite.org.",
    "version": "1.0.0",
    "title": "CADC DOI Service"
  },
  "host": "apps.canfar.net",
  "basePath": "/doi/instances",
  "tags": [
    {
      "name": "instances",
      "description": "Main endpoint for the DOI service."
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/instances": {
      "post": {
        "tags": [
          "instances"
        ],
        "summary": "Initialize a new DOI",
        "description": "Generates a VOSpace directory the calling user will have permission to upload DOI data to, and an XML file using DataCite metadata XSD format.",
        "operationId": "createDOI",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Basic information for starting DOI process",
            "required": true,
            "schema": {
              "$ref": "#/definitions/DOIMeta"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "DOI creation successful."
          },
          "400": {
            "description": "Bad DOI metadata"
          },
          "403": {
            "description": "Not authorised"
          },
          "409": {
            "description": "DOI already exists"
          },
          "500": {
            "description": "Unexpected server error"
          },
          "503": {
            "description": "Temporarily unavailable"
          }
        }
      },
      "get": {
        "tags": [
          "instances"
        ],
        "summary": "Get a list of DOI statuses",
        "description": "List the statuses of all DOIs created by the user.",
        "operationId": "getAllDOI",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/xml",
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DOIStatusList"
              }
            }
          },
          "403": {
            "description": "Not authorised"
          },
          "500": {
            "description": "Unexpected server error"
          },
          "503": {
            "description": "Temporarily unavailable"
          }
        }
      }
    },
    "/instances/{DOINum}": {
      "post": {
        "tags": [
          "instances"
        ],
        "summary": "Update a DOI instance",
        "description": "Multipart update request. One part contains the DOI instance. Another part contains the optional journal reference",
        "requestBody": {
          "required": "true",
          "content": {
            "multipart/mixed": {
              "schema": {
                "type": "object",
                "properties": {
                  "fc": {
                    "type": "object",
                    "schema": {
                      "$ref": "#/definitions/DOIMeta"
                    }
                  },
                  "journalRef": {
                    "type": "string",
                    "example": "10.5072/example-full"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "DOINum",
            "in": "path",
            "description": "Digital Object Identifier number to retrieve",
            "required": true,
            "type": "string"
          }
        ],
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/xml",
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "DOI update successful."
          },
          "400": {
            "description": "Bad request"
          },
          "403": {
            "description": "Not authorised"
          },
          "500": {
            "description": "Unexpected server error"
          },
          "503": {
            "description": "Temporarily unavailable"
          }
        }
      },
      "get": {
        "tags": [
          "instances"
        ],
        "summary": "Get a DOI instance",
        "description": "Get specified DOI for authenticated user. Calling user must have access.",
        "operationId": "getDOI",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "DOINum",
            "in": "path",
            "description": "Digital Object Identifier number to retrieve",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DOIMeta"
              }
            }
          },
          "403": {
            "description": "Not authorised"
          },
          "404": {
            "description": "DOI not found"
          },
          "500": {
            "description": "Unexpected server error"
          },
          "503": {
            "description": "Temporarily unavailable"
          }
        }
      },
      "delete": {
        "tags": [
          "instances"
        ],
        "summary": "Delete a DOI instance",
        "description": "Delete specified DOI for authenticated user, including associated VOSpace data directory. Calling user must have access.",
        "operationId": "deleteDOI",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "DOINum",
            "in": "path",
            "description": "Digital Object Identifier number to retrieve",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "403": {
            "description": "Not authorised"
          },
          "500": {
            "description": "Unexpected server error"
          },
          "503": {
            "description": "Temporarily unavailable"
          }
        }
      }
    },
    "/instances/{DOINum}/mint": {
      "post": {
        "tags": [
          "instances"
        ],
        "summary": "Finalize a DOI instance",
        "description": "A multi-step process that freezes the DOI data from further changes, registers the DOI to DataCite and makes the DOI findable from DataCite. The DOI status indicates the progress of the finalize process.",
        "operationId": "mintDOI",
        "parameters": [
          {
            "name": "DOINum",
            "in": "path",
            "description": "DOI to be minted",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "DOI minting request successful."
          },
          "400": {
            "description": "Bad request"
          },
          "403": {
            "description": "Not authorised"
          },
          "500": {
            "description": "Unexpected server error"
          },
          "503": {
            "description": "Temporarily unavailable"
          }
        }
      }
    },
    "/instances/{DOINum}/status": {
      "get": {
        "tags": [
          "instances"
        ],
        "summary": "Get the status of a DOI instance",
        "description": "Get the status of the specified DOI for authenticated user. Calling user must have access.",
        "operationId": "getDOIStatus",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "DOINum",
            "in": "path",
            "description": "Digital Object Identifier number to retrieve status",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DOIStatus"
              }
            }
          },
          "403": {
            "description": "Not authorised"
          },
          "404": {
            "description": "DOI not found"
          },
          "500": {
            "description": "Unexpected server error"
          },
          "503": {
            "description": "Temporarily unavailable"
          }
        }
      }
    }
  },
  "definitions": {
    "DOIStatus": {
      "type": "object",
      "required": [
        "identifier",
        "title",
        "publicationYear",
        "status"
      ],
      "properties": {
        "identifier": {
          "type": "object",
          "example": "10.5072/example-full",
          "properties": {
            "identifierType": {
              "type": "string",
              "example": "DOI",
              "xml": {
                "attribute": true
              }
            }
          }
        },
        "title": {
          "type": "object",
          "example": "Full DataCite XML Example",
          "properties": {
            "xml:lang": {
              "type": "string",
              "example": "en-US",
              "xml": {
                "attribute": true
              }
            }
          }
        },
        "dataDirectory": {
          "type": "string",
          "example": "/AstroDataCitationDOI/CISTI.CANFAR/18.0100/data"
        },
        "status": {
          "type": "string",
          "example": "draft"
        }
      },
      "xml": {
        "name": "doistatus"
      }
    },
    "DOIStatusList": {
      "type": "object",
      "required": [
        "doistatus"
      ],
      "properties": {
        "doistatus": {
          "type": "object",
          "properties": {
            "identifier": {
              "type": "object",
              "example": "10.5072/example-full",
              "properties": {
                "identifierType": {
                  "type": "string",
                  "example": "DOI",
                  "xml": {
                    "attribute": true
                  }
                }
              }
            },
            "title": {
              "type": "object",
              "example": "Full DataCite XML Example",
              "properties": {
                "xml:lang": {
                  "type": "string",
                  "example": "en-US",
                  "xml": {
                    "attribute": true
                  }
                }
              }
            },
            "dataDirectory": {
              "type": "string",
              "example": "/AstroDataCitationDOI/CISTI.CANFAR/18.0100/data"
            },
            "status": {
              "type": "string",
              "example": "in progress"
            }
          }
        }
      },
      "xml": {
        "name": "doiStatuses"
      }
    },
    "DOIMeta": {
      "type": "object",
      "required": [
        "identifier",
        "creators",
        "titles",
        "publisher",
        "publicationYear"
      ],
      "properties": {
        "identifier": {
          "type": "object",
          "example": "10.5072/example-full",
          "properties": {
            "identifierType": {
              "type": "string",
              "example": "DOI",
              "xml": {
                "attribute": true
              }
            }
          }
        },
        "creators": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "creator": {
                "type": "object",
                "properties": {
                  "creatorName": {
                    "type": "object",
                    "example": "Miller, Elizabeth",
                    "properties": {
                      "nameType": {
                        "type": "string",
                        "example": "Personal",
                        "xml": {
                          "attribute": true
                        }
                      }
                    }
                  },
                  "givenName": {
                    "type": "string",
                    "example": "Elizabeth"
                  },
                  "familyName": {
                    "type": "string",
                    "example": "Miller"
                  },
                  "nameIdentifier": {
                    "type": "object",
                    "example": "0000-0001-5000-0007",
                    "properties": {
                      "nameIdentifierScheme": {
                        "type": "string",
                        "example": "ORCID",
                        "xml": {
                          "attribute": true
                        }
                      },
                      "schemeURI": {
                        "type": "string",
                        "example": "http://orcid.org/",
                        "xml": {
                          "attribute": true
                        }
                      }
                    }
                  },
                  "affiliation": {
                    "type": "string",
                    "example": "DataCite"
                  }
                }
              }
            }
          }
        },
        "titles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "object",
                "example": "Full DataCite XML Example",
                "properties": {
                  "xml:lang": {
                    "type": "string",
                    "example": "en-US",
                    "xml": {
                      "attribute": true
                    }
                  }
                }
              }
            }
          }
        },
        "publisher": {
          "type": "string",
          "example": "CADC"
        },
        "publicationYear": {
          "type": "string",
          "example": "2014"
        },
        "contributors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "contributor": {
                "type": "object",
                "properties": {
                  "contributorType": {
                    "type": "string",
                    "example": "ProjectLeader",
                    "xml": {
                      "attribute": true
                    }
                  },
                  "contributorName": {
                    "type": "string",
                    "example": "Starr, Joan"
                  },
                  "givenName": {
                    "type": "string",
                    "example": "Joan"
                  },
                  "familyName": {
                    "type": "string",
                    "example": "Starr"
                  },
                  "nameIdentifier": {
                    "type": "object",
                    "example": "0000-0002-7285-027X",
                    "properties": {
                      "nameIdentifierScheme": {
                        "type": "string",
                        "example": "ORCID",
                        "xml": {
                          "attribute": true
                        }
                      },
                      "schemeURI": {
                        "type": "string",
                        "example": "http://orcid.org/",
                        "xml": {
                          "attribute": true
                        }
                      }
                    }
                  },
                  "affiliation": {
                    "type": "string",
                    "example": "California Digital Library"
                  }
                }
              }
            }
          }
        },
        "dates": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "date": {
                "type": "object",
                "example": "2018-12-10",
                "properties": {
                  "dateType": {
                    "type": "string",
                    "example": "Created",
                    "xml": {
                      "attribute": true
                    }
                  }
                }
              }
            }
          }
        },
        "resourceType": {
          "type": "object",
          "properties": {
            "resourceTypeGeneral": {
              "type": "string",
              "example": "Dataset",
              "xml": {
                "attribute": true
              }
            }
          }
        },
        "descriptions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "object",
                "example": "XML example of all DataCite Metadata Schema v4.1 properties.",
                "properties": {
                  "xml:lang": {
                    "type": "string",
                    "example": "en-US",
                    "xml": {
                      "attribute": true
                    }
                  },
                  "descriptionType": {
                    "type": "string",
                    "example": "Abstract",
                    "xml": {
                      "attribute": true
                    }
                  }
                }
              }
            }
          }
        },
        "language": {
          "type": "string",
          "example": "en-US"
        }
      },
      "xml": {
        "name": "resource",
        "namespace": "http://datacite.org/schema/kernel-4"
      }
    }
  }
}
