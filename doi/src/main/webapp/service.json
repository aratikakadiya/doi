{
  "swagger": "2.0",
  "info": {
    "description": "The Digital Object Identifier (DOI) Service supports initializing and minting DOIs using DataCite.org.",
    "version": "1.0.0",
    "title": "CADC DOI Service"
  },
  "host": "apps.canfar.net",
  "basePath": "/doi/instances",
  "tags": [
    {
      "name": "instances",
      "description": "Main endpoint for the DOI service."
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/instances": {
      "post": {
        "tags": [
          "instances"
        ],
        "summary": "Initialize a new DOI",
        "description": "Generates a VOSpace directory the calling user will have permission to upload DOI data to, and an XML file using DataCite metadata XSD format.",
        "operationId": "createDOI",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Basic information for starting DOI process",
            "required": true,
            "schema": {
              "$ref": "#/definitions/DOIMeta"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "DOI creation successful. Next steps found at..."
          },
          "401": {
            "description": "Not authenticated"
          },
          "403": {
            "description": "Not authorised"
          },
          "405": {
            "description": "Invalid input"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      },
      "put": {
        "tags": [
          "instances"
        ],
        "summary": "Not Yet Implemented",
        "description": "Update an existing unminted DOI",
        "operationId": "updateDOI",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "DOI object details... ",
            "required": true,
            "schema": {
              "$ref": "#/definitions/DOIMeta"
            }
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorised"
          },
          "403": {
            "description": "User not authenticated for this DOI"
          },
          "404": {
            "description": "DOI not found"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      },
      "get": {
        "tags": [
          "instances"
        ],
        "summary": "Not Yet Implemented",
        "description": " List all DOIs for authenticated user. Calling user must have access",
        "operationId": "getAllDOI",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "description": "Status values that need to be considered for filter",
            "required": true,
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "available",
                "pending",
                "sold"
              ],
              "default": "available"
            },
            "collectionFormat": "multi"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DOIMeta"
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      }
    },
    "/instances/{DOINum}": {
      "get": {
        "tags": [
          "instances"
        ],
        "summary": "Not Yet Implemented",
        "description": "Get specified DOI for authenticated user. Calling user must have access",
        "operationId": "ListDOI",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "DOINum",
            "in": "path",
            "description": "Digital Object Identifier number to retrieve",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DOIMeta"
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      },
      "delete": {
        "tags": [
          "instances"
        ],
        "summary": "Not Yet Implemented",
        "description": "Delete specified DOI for authenticated user, including associated VOSPace data directory. Calling user must have access",
        "operationId": "deleteDOI",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "DOINum",
            "in": "path",
            "description": "Digital Object Identifier number to retrieve",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DOIMeta"
              }
            }
          },
          "400": {
            "description": "Bad parameter"
          },
          "401": {
            "description": "Not authenticated"
          },
          "403": {
            "description": "Unauthorised"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:pets": "modify pets in your account",
        "read:pets": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "DOIMeta": {
      "type": "object",
      "required": [
        "author",
        "title"
      ],
      "properties": {
        "author": {
          "type": "string",
          "example": "Fred Dooley, Phd"
        },
        "title": {
          "type": "string",
          "example": "Views of Neptune, 2018 through 2020"
        },
        "publicationDOI": {
          "type": "string",
          "example": "11.2335/90.9090"
        },
        "status": {
          "type": "string",
          "description": "Where the DOI is in the creation process",
          "enum": [
            "inprogress",
            "pending",
            "minted"
          ]
        }
      },
      "xml": {
        "name": "DOIMetadata"
      }
    }
  }
}